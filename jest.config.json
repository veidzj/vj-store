{
  "roots": ["<rootDir>/tests"],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageProvider": "babel",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/main/**"
  ],
  "transform": {
    ".+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/tests/(.*)": "<rootDir>/tests/$1",
    "@/(.*)": "<rootDir>/src/$1"
  }
}
