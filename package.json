{
  "name": "vj-store",
  "version": "0.14.0",
  "description": "E-Commerce API using TypeScript, DDD, TDD and Clean Architecture",
  "author": "Jo√£o Victor Veidz",
  "license": "GPL-3.0",
  "repository": "https://github.com/veidzj/vj-store",
  "homepage": "https://github.com/veidzj/vj-store",
  "scripts": {
    "start": "node dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "check": "ncu --interactive --format group",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:watch": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:changed": "npm test -- --changedSince=origin/main",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@shelf/jest-mongodb": "^4.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.8",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mockdate": "^3.0.5",
    "nodemon": "^3.0.2",
    "npm-check-updates": "^16.14.12",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.3.0",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
